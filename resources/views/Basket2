    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function applyPromo() {
            const discountRow = document.getElementById('discount-row');
            const promoInput = document.querySelector('input[type="text"]');
            
            if (promoInput.value.toUpperCase() === 'GAMEDEN123') {
                discountRow.style.display = 'flex';
                discountRow.classList.add('discount-applied');
                
                const subtotal = 109.98;
                const discount = subtotal * 0.1;
                const total = subtotal - discount;
                
                document.querySelector('#discount-row .fw-bold').textContent = 
                    `-£${discount.toFixed(2)}`;
                document.querySelector('.price-summary div:last-child .fw-bold').textContent = 
                    `£${total.toFixed(2)}`;
                
                alert('Promo code applied successfully! 10% discount added.');
            } else {
                alert('Invalid promo code. Please try again.');
            }
            
            promoInput.value = '';
        }

        function trackOrder() {
            const orderNumber = document.getElementById('orderNumber').value;
            const trackingResult = document.getElementById('trackingResult');
            
            if (orderNumber.trim() === '') {
                alert('Please enter an order number');
                return;
            }

            trackingResult.style.display = 'block';
        }
    </script>
    
<script>
    
    let cartItems = [
        {
            id: 1,
            name: "The Last of Us Part II",
            price: 49.99,
            image: "image/game1.jpg",
            genre: "Action-Adventure",
            platform: "PS5",
            releaseDate: "2020",
            quantity: 1
        },
        {
            id: 2,
            name: "God of War Ragnarök",
            price: 59.99,
            image: "image/game2.jpg",
            genre: "Action RPG",
            platform: "PS5",
            releaseDate: "2022",
            quantity: 1
        }
    ];

    // Function to remove item from cart
    function removeFromCart(itemId) {
        const index = cartItems.findIndex(item => item.id === itemId);
        if (index > -1) {
            cartItems.splice(index, 1);
            updateCartDisplay();
            updateTotalPrice();
            
            // Show removal notification
            const toast = document.createElement('div');
            toast.className = 'toast-notification';
            toast.textContent = 'Item removed from cart';
            document.body.appendChild(toast);
            
            // Remove notification after 3 seconds
            setTimeout(() => toast.remove(), 3000);
        }
    }

    // Function to add suggested game to cart
    function addToCart(gameData) {
        cartItems.push({
            id: Date.now(), // Generate unique ID
            ...gameData,
            quantity: 1
        });
        updateCartDisplay();
        updateTotalPrice();

        // Show addition notification
        const toast = document.createElement('div');
        toast.className = 'toast-notification';
        toast.textContent = 'Game added to cart';
        document.body.appendChild(toast);
        
        // Remove notification after 3 seconds
        setTimeout(() => toast.remove(), 3000);
    }

    // Function to update cart display
    function updateCartDisplay() {
        const tbody = document.querySelector('tbody');
        tbody.innerHTML = ''; // Clear current items

        cartItems.forEach(item => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
                <td class="game-details">
                    <div class="d-flex align-items-start gap-3">
                        <img src="${item.image}" alt="${item.name}" class="img-thumbnail" 
                             style="width: 100px; height: 100px; object-fit: cover;">
                        <div>
                            <h5 class="mb-1">${item.name}</h5>
                            <p class="text-muted mb-1"><small>Genre: ${item.genre}</small></p>
                            <p class="text-muted mb-1"><small>Platform: ${item.platform}</small></p>
                            <p class="text-muted mb-0"><small>Release Date: ${item.releaseDate}</small></p>
                        </div>
                    </div>
                </td>
                <td class="align-middle">£${item.price.toFixed(2)}</td>
                <td class="align-middle">
                    <input type="number" name="quantity" value="${item.quantity}" min="1" max="99" 
                           class="form-control" style="width: 70px;" 
                           onchange="updateQuantity(${item.id}, this.value)">
                </td>
                <td class="align-middle">
                    <button type="button" class="btn btn-danger btn-sm" 
                            onclick="removeFromCart(${item.id})">Remove</button>
                </td>
            `;
            tbody.appendChild(tr);
        });
    }

    // Function to update quantity
    function updateQuantity(itemId, newQuantity) {
        const item = cartItems.find(item => item.id === itemId);
        if (item) {
            item.quantity = parseInt(newQuantity);
            updateTotalPrice();
        }
    }

    // Function to update total price
    function updateTotalPrice() {
        const subtotal = cartItems.reduce((total, item) => total + (item.price * item.quantity), 0);
        document.querySelector('.price-summary div:first-child .fw-bold').textContent = 
            `£${subtotal.toFixed(2)}`;
        
        // Update total (considering any active discount)
        const discountRow = document.getElementById('discount-row');
        if (discountRow.style.display !== 'none') {
            const discount = subtotal * 0.1; // 10% discount
            const total = subtotal - discount;
            document.querySelector('#discount-row .fw-bold').textContent = 
                `-£${discount.toFixed(2)}`;
            document.querySelector('.price-summary div:last-child .fw-bold').textContent = 
                `£${total.toFixed(2)}`;
        } else {
            document.querySelector('.price-summary div:last-child .fw-bold').textContent = 
                `£${subtotal.toFixed(2)}`;
        }
    }

</script>
</body>
</html>
